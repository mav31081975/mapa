<body>

    <div id="map-container">
        <img id="world-map" src="https://upload.wikimedia.org/wikipedia/commons/8/83/Equirectangular_projection_SW.jpg" alt="Map">
        <div id="vignette"></div>

        <div id="info-panel" class="pos-tr">
            <div class="label">UBICACIÓN POLÍTICA</div>
            <div id="country-name" class="value">CARGANDO...</div>
            <div class="coords">
                <div>
                    <div class="label">LATITUD</div>
                    <div id="lat-val" class="value">0.00°</div>
                </div>
                <div>
                    <div class="label">LONGITUD</div>
                    <div id="lon-val" class="value">0.00°</div>
                </div>
            </div>
        </div>
    </div>

    <script>
        const panel = document.getElementById('info-panel');
        const mapImg = document.getElementById('world-map');
        const countryText = document.getElementById('country-name');
        const latText = document.getElementById('lat-val');
        const lonText = document.getElementById('lon-val');

        let countriesData;
        let positions = ['pos-tl', 'pos-tr', 'pos-br', 'pos-bl'];
        let currentPosIdx = 1;
        let ticking = false;
        let jumping = false;

        const isMobile = ('ontouchstart' in window) || (navigator.maxTouchPoints > 0);
        if (isMobile) document.body.classList.add('is-mobile');

        d3.json("https://cdn.jsdelivr.net/npm/world-atlas@2/countries-110m.json").then(data => {
            countriesData = topojson.feature(data, data.objects.countries);
            countryText.innerText = "LISTO";
        });

        const movePanel = () => {
            if (jumping) return;
            jumping = true;
            panel.classList.remove(positions[currentPosIdx]);
            currentPosIdx = (currentPosIdx + 1) % positions.length;
            panel.classList.add(positions[currentPosIdx]);
            setTimeout(() => { jumping = false; }, 400);
        };

        function updateUI(clientX, clientY) {
            const rect = mapImg.getBoundingClientRect();
            const x = clientX - rect.left;
            const y = clientY - rect.top;

            // Mapeo preciso
            const lon = (x / rect.width) * 360 - 180;
            const lat = 90 - (y / rect.height) * 180;

            latText.innerText = lat.toFixed(4);
            lonText.innerText = lon.toFixed(4);

            if (countriesData) {
                const match = countriesData.features.find(f => d3.geoContains(f, [lon, lat]));
                countryText.innerText = match ? match.properties.name.toUpperCase() : "OCÉANO";
            }

            // Hit Test solo para Android
            if (isMobile && !jumping) {
                const pRect = panel.getBoundingClientRect();
                const margin = 5;
                if (clientX >= pRect.left - margin && clientX <= pRect.right + margin && 
                    clientY >= pRect.top - margin && clientY <= pRect.bottom + margin) {
                    movePanel();
                }
            }
            ticking = false;
        }

        // --- BIFURCACIÓN DE EVENTOS ---
        if (!isMobile) {
            /* BLOQUE PC INTACTO */
            window.addEventListener('pointermove', (e) => {
                if (!ticking) {
                    requestAnimationFrame(() => updateUI(e.clientX, e.clientY));
                    ticking = true;
                }
            });
            panel.addEventListener('mouseenter', movePanel);
        } else {
            /* BLOQUE ANDROID POTENCIADO */
            window.addEventListener('touchmove', (e) => {
                const touch = e.touches[0];
                if (!ticking) {
                    requestAnimationFrame(() => updateUI(touch.clientX, touch.clientY));
                    ticking = true;
                }
            }, { passive: false });

            panel.addEventListener('touchstart', (e) => {
                e.preventDefault();
                movePanel();
            }, { passive: false });
        }

        // Re-ajuste en rotación para evitar cortes
        window.addEventListener('orientationchange', () => {
            setTimeout(() => window.scrollTo(0,0), 100);
        });

    </script>
</body>
</html>
